{
  "extends": "airbnb",
  "plugins": [],
  "rules": {
    "func-names": "off",
    "comma-dangle": 0,
    "camelcase": "off",
    "max-len": [
      "error",
      100,
      4,
      {
        "ignorePattern": "/.+/",
        "ignoreUrls": true
      }
    ],
    // doesn't work in node v4 :(
    "strict": "off",
    "prefer-rest-params": "off"
  }
}